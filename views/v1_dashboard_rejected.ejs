<%-include('partials/header')%>
    <title>Rejected vs V1 Verified</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      window.onpageshow = function(event) {
              if (event.persisted) {
                  window.location.reload();
              }
          };
    </script>
  </head>
  <style>
    h1 {
      color: #454545;
      font-size: 30px;
      text-align: center;
      margin-bottom: 50px;
      margin-top: 50px;
      letter-spacing: 1px;
    }
    footer{
        margin-top: 50px;
      }
  </style>
   <%-include('partials/navbar')%>
  <body>
    <h1>Rejected/Verified Ratio = <%=((rejected)/(verified)).toFixed(2)%></h1>
    <canvas id="studentChart" width="500" height="150"></canvas>

    <script>

      const registrations = <%- JSON.stringify(rejected) %>;
      const verifications = <%- JSON.stringify(verified) %>;

      const ctx = document.getElementById('studentChart').getContext('2d');
      const chart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Rejected', 'V1 Verified'],
              datasets: [
                  {
                    label: 'Count of Student Rejected for V1 Registration vs Count of Student Whose Verification 1 is Verified',
                      data: [registrations, verifications],
                      backgroundColor: ['red', 'green'],
                  },
              ],
          },
      });
    </script>
    <%-include('partials/footer')%>
  </body>
</html>
